<div class="page-header">
  <h1>
    Date nights
    <a href="/date_nights/new" class="btn btn-lg btn-success">New Date night</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Day</th>
        <th>Meal</th>
        <th>Restaurant</th>
        <th>Activity</th>
        <th>Actions</th>
      </tr>

      <% @date_nights.each do |date_night| %>
      <tr>
        <td><%= date_night.user.username %></td>
        <td><%= date_night.date_id %></td>
        <td><%= date_night.day %></td>
        <td><%= date_night.meal_id %></td>
        <td><%= date_night.restaurant_id %></td>
        <td><%= date_night.activity_id %></td>
        <td>
          <a href="/date_nights/<%= date_night.id %>" class="btn btn-primary">Show</a>
          <a href="/date_nights/<%= date_night.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_date_night/<%= date_night.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
