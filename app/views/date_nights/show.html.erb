<div class="page-header">
  <h3>Date Night #<%= @date_night.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @date_night.user_id %></dd>

      <dt>Date</dt>
      <dd><%= @date_night.date_id %></dd>

      <dt>Day</dt>
      <dd><%= @date_night.day %></dd>

      <dt>Meal</dt>
      <dd><%= @date_night.meal_id %></dd>

      <dt>Restaurant</dt>
      <dd><%= @date_night.restaurant_id %></dd>

      <dt>Activity</dt>
      <dd><%= @date_night.activity_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/date_nights" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @date_night.user %>
        <a href="/date_nights/<%= @date_night.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_date_night/<%= @date_night.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
