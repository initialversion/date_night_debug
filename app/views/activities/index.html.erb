<div class="page-header">
  <h1>
    Activities
    <a href="/activities/new" class="btn btn-lg btn-success">New Activity</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Location</th>
        <th>Name</th>
        <th>Description</th>
        <th>Website</th>
        <th>Yelp link</th>
        <th>Contributor</th>
        <th>Actions</th>
      </tr>

      <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.location %></td>
        <td><%= activity.name %></td>
        <td><%= activity.description %></td>
        <td><%= activity.website %></td>
        <td><%= activity.yelp_link %></td>
        <td>
          <% if activity.contributor.present? %>
            <a href="/users/<%= activity.contributor.id %>">
              <%= activity.contributor.username %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/activities/<%= activity.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == activity.contributor %>
            <a href="/activities/<%= activity.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_activity/<%= activity.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @activities, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>