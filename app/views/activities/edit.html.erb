<!-- Validation failure messages -->
<% if @activity.errors.any? %>
  <% @activity.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Activity #<%= @activity.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_activity/<%= @activity.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @activity.location %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @activity.name %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @activity.description %></textarea>
      </div>

      <!-- Label and input for website -->
      <div class="form-group">
        <label for="website" class="control-label">
          Website
        </label>

        <input type="text" id="website" name="website" placeholder="Website" class="form-control" value="<%= @activity.website %>">
      </div>

      <!-- Label and input for yelp_link -->
      <div class="form-group">
        <label for="yelp_link" class="control-label">
          Yelp link
        </label>

        <textarea id="yelp_link" name="yelp_link" placeholder="Yelp link" class="form-control" rows="3"><%= @activity.yelp_link %></textarea>
      </div>

      <!-- Label and input for contributor_id -->
      <div class="form-group">
        <label for="contributor_id" class="control-label">
          Contributor
        </label>

        <%= select_tag(:contributor_id, options_from_collection_for_select(User.all, :id, :username, @activity.contributor_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Activity
      </button>
      or
      <a href="/activities/<%= @activity.id %>">Cancel</a>
    </form>
  </div>
</div>
